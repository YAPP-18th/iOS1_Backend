<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yapp.ios1.mapper.UserMapper">
    <insert id="signUp">
        INSERT INTO user (email, password, nickname, intro) VALUES(#{email}, #{password}, #{nickname}, #{intro})
    </insert>

    <select id="findByUserId" resultType="UserDto">
        SELECT * FROM user WHERE id = #{userId};
    </select>

    <select id="findByEmail" resultType="UserDto">
        SELECT * FROM user WHERE email = #{email};
    </select>

    <select id="findByEmailOrNickname" resultType="UserDto">
        SELECT * FROM user WHERE email = #{email} OR nickname = #{nickname} LIMIT 1;
    </select>

    <select id="findByNickname" resultType="UserDto">
        SELECT * FROM user WHERE nickname = #{nickname};
    </select>
</mapper>